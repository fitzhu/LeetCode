{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build leetcode",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g", "-Wall", "-std=c++11", "-lm", "${file}",
                "-o", "${workspaceFolder}\\main.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}